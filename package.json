{
  "version": "0.1.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsup src/index.tsx --format cjs,esm --dts --sourcemap",
    "dev": "tsup src/index.tsx --format esm --watch",
    "prepare": "npm run build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy": "npm version patch && npm publish"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  },
  "name": "@nada.pont.com/uma-grid",
  "author": "Nada.pont.com",
  "module": "dist/uma-grid.esm.js",
  "private": false,
  "size-limit": [
    {
      "path": "dist/uma-grid.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/uma-grid.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@chromatic-com/storybook": "^3.2.4",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@storybook/addon-essentials": "^8.5.8",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-interactions": "^8.5.8",
    "@storybook/addon-links": "^8.5.8",
    "@storybook/addon-onboarding": "^8.5.8",
    "@storybook/addons": "^7.6.17",
    "@storybook/blocks": "^8.5.8",
    "@storybook/react": "^8.5.8",
    "@storybook/react-vite": "^8.5.8",
    "@storybook/test": "^8.5.8",
    "@types/mousetrap": "^1.6.15",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "babel-loader": "^9.2.1",
    "esbuild-sass-plugin": "^3.3.1",
    "husky": "^9.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-is": "^19.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^11.2.0",
    "storybook": "^8.5.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.8.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "copy-to-clipboard": "^3.3.3",
    "mousetrap": "^1.6.5",
    "react-sortablejs": "^6.1.4",
    "reactstrap": "^9.2.3",
    "sass": "^1.85.0"
  }
}
